// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String                          @id @default(uuid())
  email      String                          @unique @db.VarChar(255)
  confirmed  Boolean                         @default(false) @db.Boolean()
  auth_Local Authentication_Local?
  auth_stra  Authentication_User_Strategies?
  profile    Profile?
}

model Authentication_User_Strategies {
  id          String @id @default(uuid())
  name        String @unique @db.VarChar(255)
  external_id String @unique @db.VarChar(255)
  user        User   @relation(fields: [user_Id], references: [id])
  user_Id     String @unique
}

model Authentication_Local {
  id       String @id @default(uuid())
  password String @unique @db.VarChar(255)
  user     User   @relation(fields: [user_Id], references: [id])
  user_Id  String @unique
}

model Profile {
  id       String @id @default(uuid())
  name     String @db.VarChar(255)
  lastname String @db.VarChar(255)
  picture  String @db.VarChar(255)
  user     User   @relation(fields: [user_Id], references: [id])
  user_Id  String @unique
}
